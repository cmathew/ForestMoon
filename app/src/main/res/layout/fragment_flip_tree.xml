<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.cmathew.forestmoon.fliptree.FlipTreeFragment">

    <Button
        android:id="@+id/flip_tree_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Flip Tree"/>

    <Button
        android:id="@+id/inorder_recursive_tree_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inorder traversal (Recursive)"/>

    <Button
        android:id="@+id/inorder_iterative_tree_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inorder traversal (Iterative)"/>
</LinearLayout>

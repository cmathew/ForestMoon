<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
              android:orientation="vertical"
             tools:context="com.example.cmathew.forestmoon.inorder.KthElementFragment">

    <EditText
        android:id="@+id/kth_order_entry"
        android:layout_width="match_parent"
        android:hint="Please enter 1 or more"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/find_kth_element"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Find"/>

    <TextView
        android:id="@+id/kth_inorder_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
